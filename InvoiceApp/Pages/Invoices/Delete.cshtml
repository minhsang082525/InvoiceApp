@page "{id:int}"
@model InvoiceApp.Pages.Invoices.DeleteModel
@{
}

<h2 class="text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this invoice?</h4>
    <p>
        <strong>Invoice No:</strong> @Model.Invoice?.Number<br />
        <strong>Client Name:</strong> @Model.Invoice?.ClientName
    </p>
</div>

<form method="post">
    <input type="hidden" asp-for="Invoice.Id" />
    <button type="submit" class="btn btn-danger">Confirm</button>
    <a asp-page="/Invoices/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        function showDeleteModal(id) {
            const form = document.getElementById('deleteForm');
            form.action = `/Invoices/Delete?id=${id}`;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
